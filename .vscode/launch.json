    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "Launch Program",
            "program": "${workspaceRoot}/bin/run",
            "args": [
                "generate", "Gtk-3.0", "-p"
            ],
            "outFiles": [
                "${workspaceRoot}/main.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test",
            "program": "${workspaceRoot}/node_modules/ava/profile.js",
            "args": [
                "${workspaceRoot}/test.js",
                "--no-color"
            ],
            "outFiles": [
                "${workspaceRoot}/test.js"
            ]
        }
    ]
}
